#!/bin/sh -e

pushd ${HOME} >/dev/null

# ${HOME}/.m2 is the maven repo dir
# {$HOME}/target is the class files from the previous build
if [ -d ./target ]; then
    tar cf - ./.m2 ./.ant ./target /opt/hummingbird/data /wildfly/standalone/deployments/HBEE.ear
else
    tar cf - ./.m2 ./.ant /opt/hummingbird/data /wildfly/standalone/deployments/HBEE.ear
fi

popd >/dev/null

